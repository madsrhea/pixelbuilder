<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        * {
            font-family: FatPix;
        }

        .container {
            margin-left: 50px;
        }

            .container img {
                padding: 10px;
            }

        .body-content {
            margin-top: 40px;
        }

        body {
            background-image: url(../../images/galleryBG.jpg);
        }

        .navbar-inverse {
            background-color: #FFA7A6;
        }
        </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Gallery", "Art")">
                    <img src="~/images/pictorialLogo.png" onmouseover="logoHover(this, true)" onmouseout="logoHover(this, false)" style="height: 85px; z-index: 20;"/>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Gallery", "Gallery", "Art")</li>
                    @if(User.IsInRole("Admin"))
                    {
                    <li>@Html.ActionLink("Admin Controls", "Index", "Admin")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Made by Mads Rhea</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        function logoHover(img, onOff) {
            (onOff) ? img.src = "../images/pictorialLogo.gif" : img.src = "../images/pictorialLogo.png";
        }
    </script>

</body>
</html>
