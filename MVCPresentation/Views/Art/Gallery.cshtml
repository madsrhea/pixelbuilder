@model IEnumerable<MVCPresentation.Models.ArtGalleryViewModel>

<head>
    <link href="~/Content/gallery.css" rel="stylesheet" />
</head>
<h1>Gallery</h1>
    <div class="container my-4">
    <div class="row-1">
        <div class="col" >

        </div>
    </div>
        <div class="row-2">
            @*<form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@

                @foreach (var art in Model)
                {
                    <div class="container-fluid col-sm-5">
                        <div class="card" style="background: #FDE5B4;">
                            <div class="card-body" style="z-index: 19">
                                <a href="@Url.Action("Details", "Art", new { artID = art.Art.ArtID })">
                                    <img src="@art.ArtImage" class="card-img-top gallery-img" alt="@art.Art.ArtName by @art.Art.Username" />
                                </a>
                                <div class="hover-art-buttons" style="z-index: 20; visibility: hidden;">
                                    <p>@art.Art.ArtName</p>
                                    <form class="form-favorite">
                                        <button class="favorite-art">⭐</button>
                                    </form>
                                    <form class="form-profile">
                                        <button class="user-profile">👤</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                }
    </div>
</div>